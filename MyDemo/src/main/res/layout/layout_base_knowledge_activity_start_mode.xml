<?xml version="1.0" encoding="utf-8"?> <!--启动模式-->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolBar"
        layout="@layout/include_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/s1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#a1b2c3"
                android:drawableLeft="@drawable/icon_shugang"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="启动模式"
                android:visibility="visible"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:visibility="visible"
                android:id="@+id/s2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/activity_start_model_is_what"
                />

            <TextView
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#a1b2c3"
                android:drawableLeft="@drawable/icon_shugang"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="启动模式 -- 启动模式 standard"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:visibility="visible"
                android:id="@+id/standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/activity_start_model_standard"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#a1b2c3"
                android:drawableLeft="@drawable/icon_shugang"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="启动模式 -- 启动模式 singleTop"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/singleTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/activity_start_model_singleTop"
                android:textSize="@dimen/dimen16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#a1b2c3"
                android:drawableLeft="@drawable/icon_shugang"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="启动模式 -- 启动模式 singleTask"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/singleTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/activity_start_model_singleTask"
                android:textSize="@dimen/dimen16" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#a1b2c3"
                android:drawableLeft="@drawable/icon_shugang"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:visibility="visible"
                android:text="启动模式 -- 启动模式 singleInstance"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/activity_start_model_singleInstance"
                android:textSize="@dimen/dimen16" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>