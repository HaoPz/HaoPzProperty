<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bottom_sheet_dialog_demo_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="13dp"
            android:text="选择要分享的平台"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shareDialogWeiXin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/icon_weixin"
                android:gravity="center_horizontal|center"
                android:padding="10dp"
                android:text="微信"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_12" />

            <TextView
                android:id="@+id/shareDialogWeiXinCircle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/icon_weixin_circle"
                android:gravity="center_horizontal|center"
                android:padding="10dp"
                android:text="微信朋友圈"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_12" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/shareDialogCancle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_bottom_sheet_dialog_demo_bg"
        android:gravity="center"
        android:text="取消分享"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_15" />
</LinearLayout>